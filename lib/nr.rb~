class NumRacionales

	attr_accessor :numerador,:denominador

	def initialize (x,y)
		@numerador=x
		@denominador=y
	end
	def num
		numerador
	end
	
	def denom
		denominador
	end

	def numRacional
		return numerador/denominador
	end

	def mostrar
		puts "#{numerador}/#{denominador}"
	end

	def mostrarflotante
		puts "#{numerador}/#{denominador}"
	end
end
